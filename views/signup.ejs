<html>
    <head>
        <title>TODOS</title>
        <link rel = "icon" href = "https://designvault.io/wp-content/uploads/2020/04/icon-todoist.png">
        <style>
            table{
                background-color: #e25137;
                border-style: solid;
                border-color: whitesmoke;
                
            }
           
            label{
                margin: width 1000px;
                color: white;
            }
    
            body{
                background-repeat: no-repeat;
                background-attachment: fixed;  
                background-size: cover;

           }
           h1{
            color: white;
           }
      
    
    
        </style>
        

    
    </head>

    <body>
        <br><br><br><br><br><br><br><br>
       


<form action="/signupsubmit" method="GET">
    <center>
    <table align="center" cellspacing="10" cellpadding="6"  bgcolor="white" height="200" width="500">
        <tr>
            <th  align="center" colspan="2"><h1> Sign Up</h1></th>
        </tr>

        <tr>
            <td align="center" colspan="2"> 
                <label for="name"><b>Name</b></label>
                <input type="text" id="name" placeholder="Enter full name" name="full_name" required>
            </td>
        </tr>
        <tr>
            <td align="center" colspan="2"> 
                <label for="email"><b>Email</b></label>
                <input type="text" id="email" placeholder="Enter Email" name="email" required>
            </td>
        </tr>
        
        <tr>
            <td align="center" colspan="2">
                <label for="password"><b>Password</b></label>
                <input type="password" id="password" placeholder="Enter Password" name="password" required>  
            </td>
            
        </tr>
        <tr colspan="2">
            <td align="center" colspan="2"> 
                <label for="repeatpassword"><b>Confirm Password</b></label>
                <input type="password" id="repeatpassword" placeholder="Repeat Password" name="repeatpassword">
             
            </td>
        </tr>
        <tr colspan="2">
            <td align="center">

                <p style="color: white;">By creating an account you agree to our <a href="#"
                    style="color:blue">Terms & Privacy</a><p>
            </td>
          
        </tr>

        <tr>
            <td align="center">
                <a href="login.ejs">Already have an account? Click here</a>
            </td>
        </tr>
        <tr colspan="0">
            <td align="center" colspan="2">
                <input style="background-color:white ; color : #e25137; border: none; cursor: pointer;" width="200" type="submit">
            </td>
        </tr>
        

    
    
</table></center>

</form>


    </body>
</html>